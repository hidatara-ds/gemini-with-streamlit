# Google Gemini AI Configuration
# ======================================
# This file contains environment variables needed for the Streamlit Gemini Apps
# Copy this file to .env and fill in your actual values

# Google API Key (Required)
# ======================================
# Get your API key from: https://makersuite.google.com/app/apikey
# This key is required for all Gemini AI functionality
GOOGLE_API_KEY=your_google_api_key_here

# Streamlit Configuration (Optional)
# ======================================
# Uncomment and modify these if you want to customize Streamlit behavior

# Streamlit server port (default: 8501)
# STREAMLIT_SERVER_PORT=8501

# Streamlit server address (default: localhost)
# STREAMLIT_SERVER_ADDRESS=localhost

# Enable/disable CORS (default: true)
# STREAMLIT_SERVER_ENABLE_CORS=true

# Enable/disable XSRF protection (default: true)
# STREAMLIT_SERVER_ENABLE_XSRF_PROTECTION=true

# Logging Configuration (Optional)
# ======================================
# Set log level for debugging (DEBUG, INFO, WARNING, ERROR)
# LOG_LEVEL=INFO

# Application Configuration (Optional)
# ======================================
# Customize application behavior

# Default Gemini model to use (gemini-pro, gemini-pro-vision)
# DEFAULT_GEMINI_MODEL=gemini-pro

# Enable/disable streaming responses (true/false)
# ENABLE_STREAMING=true

# Maximum chat history length (number of messages to keep)
# MAX_CHAT_HISTORY=50

# File upload settings
# Maximum file size for image uploads (in MB)
# MAX_FILE_SIZE_MB=10

# Allowed image formats for upload
# ALLOWED_IMAGE_FORMATS=jpg,jpeg,png,gif,webp

# Security Settings (Optional)
# ======================================
# Add additional security configurations if needed

# Enable/disable debug mode (set to false in production)
# DEBUG_MODE=true

# Session timeout in seconds (default: 3600 = 1 hour)
# SESSION_TIMEOUT=3600

# Development Settings (Optional)
# ======================================
# Settings for development environment

# Enable hot reload for development
# STREAMLIT_SERVER_RUN_ON_SAVE=true

# Show file watcher in sidebar
# STREAMLIT_SERVER_SHOW_FILE_WATCHER=true

# ======================================
# IMPORTANT NOTES:
# ======================================
# 1. Never commit your .env file to version control
# 2. Keep your API keys secure and private
# 3. Use different API keys for development and production
# 4. Regularly rotate your API keys for security
# 5. Check Google AI Studio for API usage limits and quotas
